<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDailyReport"
    android:id="@+id/relative"
    android:background="@color/registerPass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Daily Report"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/dailyReportImage"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/camer"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/dailyReportTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Title"
            android:textSize="16dp"
            android:padding="20dp"
            />

        <EditText
            android:id="@+id/dailyReportDes"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorWhite"
            android:hint="Discription"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/dailyReportDate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorWhite"
            android:hint="Date(Double Click)"
            android:textSize="16dp" />

        <Button
            android:id="@+id/dailyReportBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="28dp"
            android:textColor="@color/colorWhite"
            android:text="Instert"
            android:padding="10dp"
            android:background="@color/colorButton"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>