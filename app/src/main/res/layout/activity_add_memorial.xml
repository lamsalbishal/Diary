<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMemorial"
    android:background="@color/registerPass"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert Your Memorial Thing"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/memorialImage"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/camer"
                android:scaleType="fitXY"
                />

            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memorialTitle"
                android:background="@color/colorWhite"
                android:padding="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:hint="Tittle"
                />

            <EditText
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memorialDes"
                android:background="@color/colorWhite"
                android:padding="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:hint="Your Description"
                />

            <EditText
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memorialDate"
                android:background="@color/colorWhite"
                android:padding="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:hint="Date (Double Click)"
                />

            <Button
                android:id="@+id/memorialBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorButton"
                android:textSize="25dp"
                android:text="Insert"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>