<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ADDFAvourite"
    android:background="@color/registerPass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:text="Add Favourite Thing"
            android:gravity="center"

            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/imageFavourite"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/camer"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/titleFavourite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Food,Game,Clothes,etc.."
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/desFavourite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Short Description"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>


        <Button
            android:id="@+id/insertFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Insert"
            android:textColor="@color/colorWhite"
            android:background="@color/colorButton"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>